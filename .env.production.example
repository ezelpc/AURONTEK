# Docker Configuration
DOCKER_USERNAME=your-dockerhub-username
IMAGE_TAG=latest

# MongoDB Atlas (Free M0 Tier)
# Format: mongodb+srv://<username>:<password>@<cluster-url>/<database>?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://USERNAME:PASSWORD@cluster0.xxxxx.mongodb.net/aurontek?retryWrites=true&w=majority

# CloudAMQP (Free Lemur Plan)
# Format: amqps://<username>:<password>@<server-url>/<vhost>
RABBITMQ_URL=amqps://username:password@beaver.rmq.cloudamqp.com/username

# JWT Secret (Generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# reCAPTCHA (Get from Google reCAPTCHA Admin)
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
RECAPTCHA_TEST_TOKEN=your-recaptcha-test-token

# Cloudinary (For image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Email Configuration (Gmail, SendGrid, etc.)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_SECURE=false
EMAIL_FROM=AURONTEK Support <noreply@aurontek.com>

# API Rate Limiting
RATE_LIMIT=100

# Logging
LOG_LEVEL=info
